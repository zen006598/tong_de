@model tongDe.Models.ViewModels.ShopDetailsVM
@{
    ViewData["Title"] = "Details";
}
<div
    class='max-w-sm px-4 m-auto text-gray-500 bg-white border rounded-lg lg:hidden dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400'>
    <a asp-controller="Shop" asp-action="Clients" asp-route-id="@Model?.Shop?.Id"
        class='block py-3 border-b dark:border-gray-700'>
        <div class='flex items-center justify-between'>
            <span>
                <i class="p-1 mr-3 text-white bg-green-500 rounded-md fa-solid fa-user-tie"></i>
                Clients
            </span>
            <i class="fa-solid fa-chevron-right "></i>
        </div>
    </a>

    <a asp-controller="Shop" asp-action="Items" asp-route-id="@Model?.Shop?.Id"
        class='block py-3 border-b dark:border-gray-700'>
        <div class='flex items-center justify-between'>
            <span>
                <i class="p-1 mr-3 text-white rounded-md bg-rose-800 fa-solid fa-lemon"></i>
                Items
            </span>
            <i class="fa-solid fa-chevron-right "></i>
        </div>
    </a>

    <a asp-controller="Shop" asp-action="ItemCategories" asp-route-id="@Model?.Shop?.Id"
        class='block py-3 border-b dark:border-gray-700'>
        <div class='flex items-center justify-between'>
            <span>
                <i class="p-1 mr-3 text-white rounded-md bg-sky-600 fa-solid fa-table-list"></i>
                Item Categories
            </span>
            <i class="fa-solid fa-chevron-right "></i>
        </div>
    </a>
</div>

<div class='hidden w-full m-auto mb-3 text-center max-w-7xl lg:block'>
    <div class="inline-flex rounded-md shadow-sm" role="group">
        <a asp-controller="Shop" asp-action="Items" asp-route-id="@Model?.Shop?.Id"
            class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
            Items
        </a>

        <a href='#'
            class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t border-b border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
            Orders
        </a>

        <a asp-controller="Shop" asp-action="ItemCategories" asp-route-id="@Model?.Shop?.Id"
            class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-e-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
            Item Category
        </a>
    </div>

</div>

<div class='hidden m-auto lg:grid lg:grid-cols-4 lg:gap-3 '>

    <div class='mb-4 lg:mb-0'>
        <div class="flex flex-row items-center justify-between mb-3">
            <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                Clients
            </h1>
            <div>
                <a asp-action="Create" asp-controller="Client" asp-route-ShopId="@Model?.Shop?.Id"
                    class="blue-700-button">Create
                    Client</a>
            </div>
        </div>
        <div class="relative overflow-x-auto rounded-lg shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-500 rtl:text-right dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            NAME
                        </th>
                        <th scope="col" class="px-6 py-3">
                            ORDER
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <span class="sr-only">ACTION</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Client in Model.Clients)
                    {
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">

                            <td class="px-6 py-4">
                                <a asp-action="Details" asp-controller="Client" asp-route-id="@Client.Id"
                                    class='link-text-2'>
                                    @Client.Name
                                </a>
                            </td>
                            <td class="px-6 py-4">
                                <span
                                    class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Order</span>

                            </td>
                            <td class="px-6 py-4 text-right">
                                <a class="link-text" asp-action="Edit" asp-controller="Client" asp-route-id="@Client.Id"
                                    method='post'>
                                    <i class="fa-solid fa-gear"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
    </div>
</div>
