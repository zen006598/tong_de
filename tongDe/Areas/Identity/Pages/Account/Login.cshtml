@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div
    class='max-w-sm m-auto bg-white rounded-lg shadow dark:border md:mt-0 xl:p-0 dark:bg-gray-800 dark:border-gray-700'>
    <div class="max-w-sm p-6 m-auto space-y-4 md:space-y-6 sm:p-8">

        <h1 class='mb-3 text-title-1'>
            @ViewData["Title"]
        </h1>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
            <div class="mb-5">
                <label asp-for="Input.Email" class="block mb-2 text-sm font-medium text">Email</label>
                <input asp-for="Input.Email" class="w-full input-blue" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <div>
                    <span asp-validation-for="Input.Email" class="text-text-500"></span>
                </div>
            </div>
            <div class="mb-5">
                <label asp-for="Input.Password" class="block mb-2 text-sm font-medium text">Password</label>

                <input asp-for="Input.Password" class="w-full input-blue" autocomplete="current-password"
                    aria-required="true" placeholder="password" />
                <div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="flex items-start mb-5">
                <div class="flex items-center h-5">

                    <label asp-for="Input.RememberMe" class="text-sm font-medium text">
                        <input
                            class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800"
                            asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>

            <button id="login-submit" type="submit" class="mb-4 blue-700-button">Log in</button>

            <div>
                <p class="mb-2 text-sm font-light text-gray-500 dark:text-gray-400">
                    Don’t have an account yet?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium a-text-blue">
                        Sign up
                    </a>
                </p>
                <p class='mb-2'>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-sm font-light a-text-gray">
                        Forgot your password?
                    </a>
                </p>

                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                        class='text-sm font-light a-text-gray'>
                        Resend email confirmation
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
